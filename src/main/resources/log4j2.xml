<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <!-- Fixed File Appender -->
        <File name="FixedFile" fileName="logs/application.log" append="true">
            <JsonLayout>
                <KeyValuePair key="severity" value="$${ctx:severity}"/>
                <KeyValuePair key="labels" value="$${ctx:labels}"/>
                <KeyValuePair key="httpRequestMethod" value="${ctx:httpMethod}" />
                <KeyValuePair key="path" value="${ctx:path}" />
                <KeyValuePair key="timestamp" value="$${date:yyyy-MM-dd HH:mm:ss.SSS}" />
            </JsonLayout>
        </File>

        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <JsonLayout>
                <KeyValuePair key="severity" value="$${ctx:severity}"/>
                <KeyValuePair key="labels" value="$${ctx:labels}"/>
                <KeyValuePair key="httpRequestMethod" value="${ctx:httpMethod}" />
                <KeyValuePair key="path" value="${ctx:path}" />
                <KeyValuePair key="timestamp" value="$${date:yyyy-MM-dd HH:mm:ss.SSS}" />
            </JsonLayout>
        </Console>
    </Appenders>
    <Loggers>
        <!-- Root Logger -->
        <Root level="info">
            <AppenderRef ref="FixedFile" />
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>
